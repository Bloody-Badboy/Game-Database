<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_50"
    tools:layoutDirection="ltr"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_app_widget_top_bar"
      android:background="@color/indigo_dark"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="@dimen/default_space_small"
        android:text="@string/appwidget_title_game_news"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        />
  </FrameLayout>
  <ListView
      android:id="@+id/lv_news"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:itemCount="8"
      tools:listitem="@layout/list_item_game_news_app_widget"
      />
</LinearLayout>
